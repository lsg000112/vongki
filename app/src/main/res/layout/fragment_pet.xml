<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/petImage"
        android:layout_width="99dp"
        android:layout_height="103dp"
        android:layout_marginTop="236dp"
        android:src="@drawable/egg1"
        android:translationZ="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/windowImage"
        android:layout_width="88dp"
        android:layout_height="91dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="176dp"
        android:src="@drawable/window"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sofaImage"
        android:layout_width="111dp"
        android:layout_height="118dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="256dp"
        android:src="@drawable/sofa"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/propImage"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/clock"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/plantImage"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="308dp"
        android:src="@drawable/plant1"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/roofImage"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/roof"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/wallImage"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:layout_marginStart="312dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/wall"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="1080px"
        android:translationZ="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseroom" />

</androidx.constraintlayout.widget.ConstraintLayout>